<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>Add New Task</title>

  <link rel="stylesheet" href="/stylesheets/task.css" />
  <link rel="stylesheet" href="/stylesheets/form.css" />
  <script defer src="/app.js"></script>
</head>

<%- include('../partials/_navbar.ejs') %>
<body>
<div class="form-container">
  <h1>Add New Task</h1>

  <form action="/task/<%= project._id %>" method="POST">
    <label for="type">Type</label>
    <select name="task[Type]" id="type" required>
      <option disabled selected value="">-- Select Type --</option>
      <option value="Task">Task</option>
      <option value="Issue">Issue</option>
    </select>
    <label for="reportedDate">Reported Date</label>
    <input type="date" name="task[ReportedDate]" id="reportedDate" required>
    <label for="dueDate">Due Date</label>
    <input type="date" name="task[DueDate]" id="dueDate" required>
    <label for="status">Status</label>
    <select name="task[Status]" id="status" required>
      <option value="Pending">Pending</option>
      <option value="In Progress">In Progress</option>
      <option value="Completed">Completed</option>
    </select>
    <label for="description">Description</label>
    <textarea name="task[Description]" id="description" rows="4"></textarea>
    <label for="notes">Notes</label>
    <textarea name="task[Notes]" id="notes" rows="3"></textarea>

    <button type="submit" class="btn submit-btn">Create Task</button>
  </form>

  <a href="/project/<%= project._id %>" class="btn back-btn">Back to Project</a>
</div>
</body>
<%- include('../partials/_footer.ejs') %>
</html>